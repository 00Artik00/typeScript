{
    "extends": "./tsconfig-check.json",
    "compilerOptions": {
        "outDir": "public/scripts",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true
    },
    "files": [
        "src/index.ts",
        "src/server.ts"
    ],
    "include": [
        "src/**/*"
    ]
}